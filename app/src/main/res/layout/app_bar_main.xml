<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calculadorasdefisica.calculadoradecinematica.MainActivity"
    android:background="#f6f6f6"
    android:elevation="0dp">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        app:elevation="0dp">


        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            >


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/layouthead"
                android:elevation="4dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/mru_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/linea_head"
                        />

                    <ImageView

                        android:id="@+id/mrua_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/linea_head" />

                    <ImageView

                        android:id="@+id/mcu_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/linea_head" />

                    <ImageView

                        android:id="@+id/mcua_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/linea_head" />

                    <ImageView
                        android:id="@+id/mpcl_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/linea_head" />

                    <ImageView

                        android:id="@+id/tv_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/linea_head" />

                    <ImageView

                        android:id="@+id/ca_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/linea_head"
                        android:layout_weight="1"

                        />


                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/mru_t"
                        style="@style/text_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/MRU_tt"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/mrua_t"
                        style="@style/text_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/MRUA_tt"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/mcu_t"
                        style="@style/text_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/MCU_tt"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/mcua_t"
                        style="@style/text_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/MCUA_tt"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/mpcl_t"
                        style="@style/text_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/MPCL_tt"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tv_t"
                        style="@style/text_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lines="2"
                        android:text="@string/TV_tt"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/ca_t"
                        style="@style/text_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CA_tt"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        />

                </TableRow>


            </TableLayout>

        </RelativeLayout>


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/appbar"
            app:titleTextColor="@android:color/transparent" />


    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_main" />

    <TextView
        android:id="@+id/name_fragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/name_frames_head"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="50dp"
        android:paddingBottom="8dp"
        android:text="@string/inicio"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="center" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>



