<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pruebaa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->



    </style>

    <style name="Theme.Pruebaa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.Pruebaa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Pruebaa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="burguer">
        <item name="fontFamily">@font/bold</item>
    </style>



    <style name="text">

        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/inter_medium</item>


    </style>

    <style name="edittext">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor"> @color/blue_f</item>

    </style>

    <style name="bold_button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor"> @color/black</item>
        <item name="fontFamily">@font/inter_bold</item>

    </style>

    <style name="text_head">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor"> @color/black</item>
        <item name="fontFamily">@font/inter_bold</item>

    </style>

    <style name="title">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor"> @color/white</item>
        <item name="fontFamily">@font/inter_bold</item>

    </style>

    <style name="title2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_bold</item>

    </style>









</resources>