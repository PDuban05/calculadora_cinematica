<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.calculadorasdefisica.convertidordeunidades.inicio"


    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="FULL_BANNER"
                ads:adUnitId="ca-app-pub-2104042618438631/2929185200">
            </com.google.android.gms.ads.AdView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_longitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/regla"
                android:paddingStart="10dp"
                android:text="@string/longitud"
                android:elevation="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_velocidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/coche"
                android:paddingStart="10dp"
                android:text="@string/velocidad"
                android:elevation="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_tiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/tiempo"
                android:paddingStart="10dp"
                android:text="@string/tiempo"
                android:elevation="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/aceleracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/velocidad"
                android:paddingStart="10dp"
                android:text="@string/aceleracion"
                android:elevation="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/energia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/energia"
                android:paddingStart="10dp"
                android:text="@string/energia"
                android:elevation="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fuerza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/fuerza"
                android:paddingStart="10dp"
                android:text="@string/fuerza"
                android:elevation="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/poder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/rayo"
                android:paddingStart="10dp"
                android:text="@string/poder"
                android:elevation="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/almacenamiento_datos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/data"
                android:paddingStart="10dp"
                android:text="@string/Almacenamiento_datos"
                android:elevation="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/volumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/cubo"
                android:paddingStart="10dp"
                android:text="@string/volumen"
                android:elevation="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/peso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/peso"
                android:paddingStart="10dp"
                android:text="@string/masa"
                android:elevation="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/temperatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cards"
                android:drawableStart="@drawable/temperatura"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:text="@string/temperatura"
                android:elevation="4dp"/>

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="FULL_BANNER"
                ads:adUnitId="ca-app-pub-2104042618438631/2929185200">
            </com.google.android.gms.ads.AdView>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>